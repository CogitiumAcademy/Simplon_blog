                    <!-- Sidebar -->
                    <div class="col-md-12 col-lg-3 col-xl-3">
                        <h2>Archives</h2>

                        {% for post in oldposts %}
                            <div><a href="{{ path("post_view", {slug: post.slug}) }}">{{ post.title }}</a></div>
                            <div>{{ post.createdAt | ago }}</div>
                            <img src="{{ post.image }}" alt="" style="width: 100%">
                        {% endfor %}

                    </div>
